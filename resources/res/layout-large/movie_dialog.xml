<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:orientation="horizontal" android:background="@drawable/dialog_border" android:padding="15dp" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:layout_marginTop="30dp" android:layout_marginBottom="30dp">
            <ImageView android:layout_gravity="center_horizontal" android:id="@+id/chosenImage" android:layout_width="150dp" android:layout_height="180dp" android:layout_marginRight="5dp" android:src="@drawable/logodialogplaceholder"/>
            <TextView android:textSize="15sp" android:layout_gravity="center" android:id="@+id/chosenRating" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="Movie Rating: 6.3/10"/>
            <Button android:textSize="16sp" android:textColor="#ffffff" android:layout_gravity="center" android:id="@+id/closeButton" android:background="#0075d9" android:paddingLeft="40sp" android:paddingRight="40sp" android:layout_width="wrap_content" android:layout_height="50dp" android:layout_marginTop="15dp" android:text="Back" style="?android:attr/buttonStyleSmall"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="35dp" android:layout_marginRight="3dp" android:layout_marginBottom="30dp">
            <TextView android:textSize="20sp" android:textStyle="bold" android:layout_gravity="center" android:id="@+id/chosenTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Fight Club (2002)"/>
            <TextView android:textSize="17sp" android:layout_gravity="center" android:id="@+id/chosenDescription" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="This is a short description of the movie in question."/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
